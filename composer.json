{
    "name": "jblaak/php-modules",
    "type": "library",
    "authors": [
        {
            "name": "Joris Blaak",
            "email": "joris@movelab.studio"
        }
    ],
    "bin": ["./modules"],
    "require": {
        "php": "^8.1",
        "nikic/php-parser": "^4",
        "graphp/graphviz": "^0.2.2",
        "phpstan/phpdoc-parser": "^1",
        "symfony/console": "^6",
        "ondram/ci-detector": "^4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "symfony/var-dumper": "^6",
        "phpstan/phpstan": "^1"
    },
    "autoload": {
        "psr-4": {
            "PhpModules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
